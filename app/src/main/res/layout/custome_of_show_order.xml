<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/my_card_order"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="25dp"
        android:layout_margin="5dp"
        >
        <RelativeLayout
            android:id="@+id/my_reletv_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_custome_of_show_order"
                android:layout_width="95dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background" />

            <LinearLayout
                android:id="@+id/lin_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_toRightOf="@id/image_custome_of_show_order"
                android:layout_toEndOf="@id/image_custome_of_show_order"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/name_custome_of_show_order"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/mostafa"
                    android:textColor="#000000"
                    android:textSize="21sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secndline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lin_order"
                android:layout_toRightOf="@id/image_custome_of_show_order"
                android:layout_toEndOf="@id/image_custome_of_show_order"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price_of_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/count"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/count_of_order_show_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="count:2"
                    android:textColor="#FF0000"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_liner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lin_order"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/secndline"
                android:layout_toEndOf="@id/secndline"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_price"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pp_price_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textColor="#FF0000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textColor="#000000" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>