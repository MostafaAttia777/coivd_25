<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardMaxElevation="25dp"
    android:layout_margin="5dp"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/mec_image"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/revrsero" />

        <TextView
            android:id="@+id/mec_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/mec_image"
            android:layout_toEndOf="@id/mec_image"
            android:text="Rivarospire"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/mec_dec"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/mec_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/mec_image"
            android:layout_toEndOf="@id/mec_image"
            android:text="mostafamostafamostafamostafamostafamostafamostafamostafamostafa" />
        <ImageView
            android:layout_margin="2dp"
            android:id="@+id/mec_cart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_carton" />
        <TextView
            android:id="@+id/mec_price"
            android:textColor="#f00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="***"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/mec_dec"
            android:layout_toRightOf="@id/mec_image"
            android:layout_toEndOf="@id/mec_image"
            />
        <TextView
            android:id="@+id/sign"
            android:textColor="#f00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:layout_marginLeft="2dp"
            android:layout_below="@id/mec_dec"
            android:layout_toRightOf="@id/mec_price"
            android:layout_toEndOf="@id/mec_price"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>