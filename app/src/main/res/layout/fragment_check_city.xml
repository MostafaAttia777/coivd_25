<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_all_p"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".Fragments.checkCityFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="15dp"
        app:cardMaxElevation="15dp"

        >

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/world" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="15dp">

        <Spinner
            android:id="@+id/my_spns_"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/sh_spn" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="15dp">

        <Spinner
            android:id="@+id/my_spns_district"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/sh_spn"
            android:visibility="gone" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/city_l"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:id="@+id/all_cardin_city"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            app:cardCornerRadius="15dp"
            app:cardMaxElevation="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/_city"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:background="#102ED5" />

                <TextView
                    android:id="@+id/__city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/_city"
                    android:layout_toRightOf="@id/_city"
                    android:text="@string/new_confirmed"
                    android:textColor="#000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/counters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/__city"
                    android:layout_toRightOf="@id/__city"
                    android:text="@string/new_confirmed"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_for_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/counters"
                    android:layout_toRightOf="@id/counters"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view_"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/reds" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view_2_"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/orang" />
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/greens" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/test_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/r_statcis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.razerdp.widget.animatedpieview.AnimatedPieView
                android:id="@+id/my_pies"
                android:layout_width="130dp"
                android:layout_height="145dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/red"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_toLeftOf="@id/my_pies"
                android:background="#FF0000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="40dp"
                android:layout_toLeftOf="@id/red"
                android:text="@string/total_deaths"
                android:textColor="#000"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/red"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/blue"
                android:text="@string/new_confirmed"
                android:textColor="#000"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/blue"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/orang"
                android:text="@string/total_confirmed"
                android:textColor="#000"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orang"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/grenn"
                android:text="@string/total_recoverd"
                android:textColor="#000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/blue"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/red"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/my_pies"
                android:background="#2196F3" />

            <TextView
                android:id="@+id/orang"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/blue"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="13dp"
                android:layout_toLeftOf="@id/my_pies"
                android:background="#FF9902" />

            <TextView
                android:id="@+id/grenn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/orang"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/my_pies"
                android:background="#0BC813" />
        </RelativeLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cases"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="7dp"
                android:text="@string/case_update_in_egypte"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/case_update1"
                android:textColor="#000"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="7dp"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/all_card"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            app:cardCornerRadius="15dp"
            app:cardMaxElevation="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/lin_coloers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/r_color"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp"
                        android:scaleType="fitCenter"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/reds" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/b_color"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp"
                        android:scaleType="fitCenter"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/ciblue" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/y_color"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_toStartOf="@id/g_color"
                        android:layout_toLeftOf="@id/g_color"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp"
                        android:scaleType="fitCenter"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/oranges" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/g_color"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp"
                        android:scaleType="fitCenter"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/greens" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lin_coloers"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/number_red"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="10000"
                        android:textColor="#ED0000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/number_blue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/b_color"
                        android:layout_gravity="center"
                        android:layout_marginRight="9dp"
                        android:layout_weight="1"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="10000"
                        android:textColor="#062AF3"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/number_orange"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/y_color"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="10000"
                        android:textColor="#FF9800"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/number_green"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/g_color"
                        android:layout_gravity="center"
                        android:layout_toEndOf="@id/y_color"
                        android:layout_toRightOf="@id/y_color"
                        android:layout_weight="1"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="10000"
                        android:textColor="#27A62D"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cases_in_world"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:text="@string/case_update_in_world"

                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_in_world"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:text="@string/case_update2"
                android:textColor="#000"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/all_cardin_world"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            app:cardCornerRadius="15dp"
            app:cardMaxElevation="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lin_coloers_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/r_colorin_world"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp"
                        android:scaleType="fitCenter"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/reds" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/b_colorin_world"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp"
                        android:scaleType="fitCenter"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/ciblue" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/y_colorin_world"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp"
                        android:scaleType="fitCenter"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/oranges" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/g_colorin_world"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp"
                        android:scaleType="fitCenter"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/greens" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lin_coloers_two"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/number_redin_world"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="10000"
                        android:textColor="#ED0000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/number_bluein_world"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="10000"
                        android:textColor="#062AF3"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/number_orangein_world"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="10000"
                        android:textColor="#FF9800"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/number_greenin_world"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="10000"
                        android:textColor="#27A62D"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>