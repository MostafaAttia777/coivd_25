<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="25dp"
    app:cardMaxElevation="40dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/sup_iamges"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_mask_sup" />

        <LinearLayout
            android:id="@+id/lin_line"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/sup_iamges"
            android:layout_centerInParent="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-25dp"
            android:background="#0D000000"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:textStyle="bold"
                android:id="@+id/sup_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/sup_iamges"
                android:layout_weight="1.50"
                android:text="Mask"
                android:textColor="#0B0707"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/sup_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/sup_iamges"
                android:layout_weight=".50"
                android:gravity="right"
                android:text="3$"
                android:textColor="#FF0000"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/sup_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="$"
                android:textColor="#FF0000"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>